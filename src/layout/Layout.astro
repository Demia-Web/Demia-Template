---
import BaseHead from "../includes/BaseHead.astro";
import Header from "../includes/Header.astro";
import Footer from "../includes/Footer.astro";
import Menu from "../includes/Menu.astro";
import { ClientRouter, fade } from "astro:transitions";

const { title, description, keyword } = Astro.props;
---

<!doctype html>
<html lang="it" id="html">
  <head>
    <BaseHead title={title} description={description} keyword={keyword} />
    <ClientRouter />
  </head>
  <body id="body" class="relative" transition:animate={fade({ duration: "0.4s" })}>
    <Header />
    <Menu />
    <slot />
    <Footer />
  </body>
</html>
